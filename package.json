{
  "name": "cowtui",
  "version": "0.0.2",
  "type": "module",
  "description": "Terminal dashboard for BullMQ queues, jobs, and workers",
  "bin": {
    "cowtui": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "bun run src/index.tsx",
    "dev": "bun run --watch src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target bun && printf '#!/usr/bin/env bun\\n' | cat - dist/index.js > dist/tmp && mv dist/tmp dist/index.js && chmod +x dist/index.js",
    "prepublishOnly": "bun run build",
    "test-bullmq": "bun run scripts/test-instance.ts",
    "format": "bunx biome check --write src"
  },
  "keywords": [
    "bullmq",
    "tui",
    "terminal",
    "redis",
    "queue",
    "dashboard"
  ],
  "license": "GPL-3.0-only",
  "author": "ShaunLWM",
  "repository": "github:ShaunLWM/cowtui",
  "homepage": "https://github.com/ShaunLWM/cowtui",
  "bugs": "https://github.com/ShaunLWM/cowtui/issues",
  "engines": {
    "bun": ">=1.0.0"
  },
  "optionalDependencies": {
    "@opentui/core-darwin-x64": "0.1.77",
    "@opentui/core-darwin-arm64": "0.1.77",
    "@opentui/core-linux-x64": "0.1.77",
    "@opentui/core-linux-arm64": "0.1.77",
    "@opentui/core-win32-x64": "0.1.77",
    "@opentui/core-win32-arm64": "0.1.77"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@opentui/core": "0.1.77",
    "@opentui/react": "0.1.77",
    "@types/bun": "latest",
    "@types/minimist": "1.2.5",
    "bullmq": "5.67.3",
    "ioredis": "5.9.2",
    "minimist": "1.2.8",
    "react": "19.2.4"
  }
}
